physics QGSP_BERT

# beam properties
beam rectangular beamZ=-200 beamHeight=1000 beamWidth1000 \
    meanMomentum=43.349 sigmaP=0 particle=neutron nEvents=1000000

# particle colours
particlecolor neutron=1,1,1 gamma=1,0,0 proton=0,1,0

# object definitions
box Target width=3000 height=3000 length=216.9  material=CONCRETE color=0.7,0.7,0.3,0.5
box BeamVis width=1000.0 height=1000.0 length=1.0 material=Vacuum color=1,0,0
virtualdetector Det293 width=250 height=250 length=10.0 material=Vacuum color=1,1,1,0.9 format=ascii

# object locations
place BeamVis z=-200
place Target z=350
place Det293 z=734
